{
    "Version": 1,
    "Statement": [
        {
            "Effect": "Allow",
            "Resource": "res:::device",
            "Action": [
                "act:::device:list",
                "act:::device:read",
                "act:::device:update"
            ]
        },
        {
            "Effect": "Allow",
            "Resource": "res:::employee",
            "Action": [
                "act:::employee:list",
                "act:::employee:read",
                "act:::employee:update",
                "act:::employee:delete"
            ],
            "Condition": {
                "AtLeastOne": {
                    "StringIn": {
                        "prop:::employee:employee_uuid": [
                            "501228f3-f7f3-4ef1-8bc9-9fb73347f518",
                            "d23b9e25-b0f0-4056-86f0-c104007d1955",
                            "e45b9e25-b0f0-4056-86f0-c104007d1904",
                            "c78b9e25-b0f0-4056-86f0-c104007d1967"
                        ],
                        "prop:::employee:organization_uuid": [
                            "501228f3-f7f3-4ef1-8bc9-9fb73347f518"
                        ]
                    }
                }
            }
        },
        {
            "Effect": "Allow",
            "Resource": "res:::report:ta",
            "Action": [
                "act:::report:ta:list"
            ],
            "Condition": {
                "AtLeastOne": {
                    "StringIn": {
                        "prop:::employee:organization_uuid": [
                            "501228f3-f7f3-4ef1-8bc9-9fb73347f518"
                        ]
                    }
                }
            }
        },
        {
            "Effect": "Allow",
            "Resource": "res:::leave",
            "Action": [
                "act:::leave:approve"
            ],
            "Condition": {
                "AtLeastOne": {
                    "StringIn": {
                        "prop:::employee:employee_uuid": [
                            "501228f3-f7f3-4ef1-8bc9-9fb73347f518",
                            "c78b9e25-b0f0-4056-86f0-c104007d1967"
                        ],
                        "prop:::employee:organization_uuid": [
                            "e45b9e25-b0f0-4056-86f0-c104007d1904",
                            "c78b9e25-b0f0-4056-86f0-c104007d1967",
                            "501228f3-f7f3-4ef1-8bc9-9fb73347f518",
                            "d23b9e25-b0f0-4056-86f0-c104007d1955",
                            "e45b9e25-b0f0-4056-86f0-c104007d1904",
                            "c78b9e25-b0f0-4056-86f0-c104007d1967"
                        ]
                    }
                },
                "MustHaveAll": {
                    "DateRange": {
                        "sys:::now:date": {
                            "from": "2023-01-01",
                            "to": "2023-01-31"
                        }
                    }
                }
            }
        }
    ]
}


